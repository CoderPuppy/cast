.tabs
	& > .tab
		display: none

		&.active
			display: block

	& > ul
		list-style-type: none
		padding-left: 0
		margin: 0
		height: 27px

		& > li
			float: left
			background: gainsboro
			padding: 2px 4px
			margin: 4px
			font-size: 15px
			height: 1em

			cursor: pointer

			& > a
				text-decoration: none
				color: black

			&:hover
				background: hsl(67, 100%, 74%)

			&.active
				background: hsl(84, 100%, 74%)

		&::after
			clear: both
			display: table
			line-height: 0
			content: ""